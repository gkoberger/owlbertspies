extends layout

block content
  header
    #awning
      .left
      .right
    img(src="/images/logo.png" class="m-auto block w-[200px] z-10 relative")

  .container.mx-auto.px-4.mt-10.mb-10
    .grid.grid-cols-3.gap-4
      each pie, i in pies
        .overflow-hidden.mb-10
          .py-5.rounded-lg(class="bg-["+colors[i % colors.length]+"]")
            img.pie(src=`images/pies/${pie.flavor.toLowerCase().replace(/ /g,'')}.png` alt=pie.flavor class="w-[50%] m-auto")
          .p-4
            h2.text-lg.font-semibold.mb-2= pie.flavor
            p.text-gray-600.mb-4= pie.description
            button.text-white.px-4.py-2.rounded(class="bg-[#01a4af] hover:bg-blue-600") Add to Cart
