@import 'nib';

*, *:before, *:after
  box-sizing border-box

body
  padding: 0px
  font: 14px "Open Sans", Helvetica, Arial, sans-serif
  background #fffdf8
a
  color: #00B7FF

#pg-index
  p
    color #888
  .pie
    filter: drop-shadow(5px 5px 0px rgba(0, 0, 0, 0.2));
  header
    #awning
      position absolute
      top 0
      height 150px
      width 100%
      left 0
      display flex
      border-top 10px solid #007f88
      .left
        transform scaleX(-1)
        background-image url('/images/awning.png')
        height 100%
        width 50%
        background-repeat: repeat;
        background-size auto 100%
        background-position top left
      .right
        background-image url('/images/awning.png')
        height 100%
        width 50%
        background-repeat: repeat;
        background-size auto 100%
